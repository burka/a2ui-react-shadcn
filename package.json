{
  "name": "a2ui-react",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A2UI protocol message renderer using shadcn/ui components",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "dev": "turbo run dev",
    "format": "biome format --write .",
    "check": "biome check --write . && turbo run typecheck && turbo run test",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@vitest/coverage-v8": "^4.0.16",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
